<%- include('head.ejs'); %>
<body>
<%- include('header.ejs'); %>
<div class="container">
  <h2><% 
    let menuDates = results.find(r => r.start_day && r.end_day);
    if(menuDates) { 
  %><%- menuDates.start_day %>〜<%- menuDates.end_day %>の<% } %>メニュー</h2>
<dl class="menu">
  <% for(row of results){ %>
    <%
      let weekdays = "";
      if(row.weekdays != null) {
        weekdays = "("+row.weekdays+")"
    }%>
    <div>
    <dt><%- row.name %> <%- row.description %> <%- weekdays %></dt>
    <dd><%- row.price %>円</dd>
    </div>
      <% } %>
</dl>

<a href="orderform">注文する</a>
</div>
</body>
